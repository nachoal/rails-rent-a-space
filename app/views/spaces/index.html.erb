<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 100%, rgba(0,36,61,0.6) 100%), url('https://images.unsplash.com/photo-1511578314322-379afb476865'); background-position: center;">
  <div class="banner-content">
    <h1>Find the right venue for your event</h1>
    <p>The best venues for conferences, meetings, wedding and parties.</p>

    <%= form_tag(search_spaces_path, {method: 'get'}) do %>
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-8">
        <%= text_field_tag :search,
          params[:search],
          class: "form-control",
          placeholder: "Find a venue"
        %>
      </div>
      <div class="col-xs-2">
        <%= submit_tag 'Search',
          class: "btn btn-primary"
        %>
      </div>
      <div class="col-xs-1"></div>
    <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h4 id="v_list">Pick a venue to rent:</h4>
  <div class="row">
  <%= render 'shared/card_space' %>
  </div>
</div>
