<div class="main-search">
  <div class="search-results">
    <div class="row">
      <div class="search-bar">
        <%= form_tag(search_spaces_path, {method: 'get', remote: true}) do %>
          <div class="row">
            <div class="col-xs-10">
              <%= text_field_tag :search,
                params[:search],
                class: "form-control",
                placeholder: "Find a venue (by name, description, city, country or capacity)"
              %>
            </div>
            <div class="col-xs-2">
              <%= submit_tag 'Search',
                class: "btn btn-primary",
                'data-loading-text' => "<i class='icon-spinner icon-spin icon-large'></i>"
              %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row" id="card-results">
      <%= render 'shared/long_card_space', spaces: @spaces %>
    </div>
  </div>

  <div
    id="map" class="map-results"
    data-markers="<%= @markers.to_json %>"
  ></div>
</div>

<% content_for :js_pack do %>
  <%= javascript_pack_tag 'search_loading' %>
<% end %>
