<div class="row">
  <div class="col-md-6">
    <h3><%= @user.email %></h3>
    <h4>My rented spaces:</h4>
    <ul>
      <% if @user.rentals.any? %>
        <% @user.rentals.each do |rental| %>
        <li><%= rental %></li>
        <% end %>
      <% else %>
        <p>You don't have any rented spaces yet. You should rent one! </p>
      <% end %>
    </ul>
    <% if @user.spaces.any? %>
      <h3>Places that you have for rent:</h3>
      <ul>
        <% @user.spaces[0..(@spaces.size - 1)].each do |space| %>
          <li>
            <p><strong>Address:</strong><%= space.address %> <strong>| Description:</strong> <%= space.description %> <strong>Country:</strong><%= space.country%> </p>
            <p><%= link_to("Edit", edit_user_space_path(@user, space)) %></p>
          </li>
        <% end %>
      </ul>
    <% else  %>
      <p>You have not created any spaces for rent. You should create one!</p>
    <% end  %>
  </div>
  <div class="col-md-6">

      <h3>Add a new place for rent:</h3>
      <%= simple_form_for [@user, @space] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :name %>
        <%= f.input :city %>
        <%= f.input :country %>
        <%= f.input :capacity %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>

  </div>
</div>
